# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias mux="tmuxinator"

alias gst="git status"
alias gco="git checkout"
alias gd="git diff"
alias gcl="git clone"
alias gbr="git branch"
alias gpu="git pull"
alias gps="git push"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

alias reset='rake db:disconnect db:drop db:create db:migrate; rake db:seed; puma-dev -stop; rm log/development.log log/test.log;'
alias ghk="zsh .git/hooks/pre-commit"
alias ss="subl"

